<% include partial/top.ejs %>
<div class="ui main text container segment">
    <div class="ui huge header">edit Post :</div>
    <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
  <div class="field">
    <label>Title</label>
    <input type="text" name="blog[title]"  value="<%= blog.title %>">
  </div>
  <div class="field">
    <label>Image</label>
    <input type="text" name="blog[image]" value="<%= blog.image %>">
  </div>
  <div class="field">
    <label>Post</label>
    <textarea name="blog[body]" rows="2">
        <%= blog.body %>
    </textarea>
  </div>
  <button class="ui button positive basic" type="submit">Submit</button>
</form>
</div>
